{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018", "DOM"],
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "test_js",
    "rootDir": ".",
    "types": ["node", "@cucumber/cucumber", "chai"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["src/tests/*"],
      "@common/*": ["src/tests/common/*"],
      "@services/*": ["src/tests/common/services/*"],
      "@config/*": ["src/tests/common/config/*"],
      "@utils/*": ["src/tests/common/utils/*"],
      "@features/*": ["src/tests/e2e/features/*"],
      "@steps/*": ["src/tests/e2e/steps/*"],
      "@integration/*": ["config/integration/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "xray/config/upload-to-xray.ts",
    "config/integration/index.ts"
  ],
  "exclude": [
    "node_modules",
    "test_js"
  ]
}